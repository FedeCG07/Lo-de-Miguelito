model Client {
  idClient        Int @id @default(autoincrement())
  fullName      String
  email String @unique
  phoneNumber Int
  password String
  address String
  totalOrders Int @default(0)
  role String @default("Client")
  discountPercentage Int @default(0)
  reservedTable Int?

  orders Order[]

  table Table? @relation(fields: [reservedTable], references: [tableNumber])
}
